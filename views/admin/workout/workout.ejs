<div class="container-fluid" id="main">
    <div class="top" id="content">
        <div class="title">
            <h5>Exercise</h5>
            <p>See all the exercises here.</p>
        </div>
        <div class="button">
        </div>
    </div>
    <br>
    <div class="content_table">
        <div class="search_bar">
                <div class="row">
                    <div class="col-lg-8 col-md-6 d-flex align-items-center">
                      <form action="/admin/workout/getSearchExercise" method="get" class="search-form">
                        <div class="form-group input-group search">
                            <a><span class="iconify" data-icon="akar-icons:search"></span></a>
                            <input type="text" class="form-control" id="searchText" name="searchedTitle" placeholder="Search by name..." value="<%= searchValue %>">
                        </div>
                        <input type="submit" hidden />
                      </form>
                    </div>
                    <div class="col-lg-4 col-md-6 d-flex align-items-center justify-content-md-end justify-content-start">
                      <% if(!searchPage) { %>
                        <button class="btn btn-primary addButton" data-bs-toggle="modal" data-bs-target="#addExercise"><span class="iconify" data-icon="carbon:add-alt"></span>&nbsp;&nbsp;Add Exercise</button>
                      <% } else { %>
                        <button class="btn btn-primary" onclick="location.href='/admin/workout?page=1'">Reload</button>
                      <% } %>
                    </div>
                </div>
        </div>
        <br>
        <table>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">EXERCISE</th>
                <th scope="col">CATEGORY</th>
                <th scope="col">CALORIES</th>
                <th scope="col">SET</th>
                <th scope="col">PERSET</th>
                <th scope="col">WEIGHT</th>
                <th scope="col">OPTION</th>
              </tr>
            </thead>
            <tbody>
              <% if(data.length == 0) { %> 
                <td>No exercises present</td>
            <% } else { %>
                <% data.forEach((exercise,index) => { %> 
                    <tr>
                      <th scope="row"><%= (index+1+metadata.offset) %></th>
                      <td>
                        <div class="profile_table_data">
                            <div class="profile_image">
                                <img src="<%= exercise.cover_photo %>" alt="">
                                 <div class="edit-icon" onclick="selectCoverPhoto('<%= exercise.id %>','<%= exercise.cover_photo %>')">
                                    <a><span class="iconify" data-icon="clarity:edit-line"></span></a>
                                 </div>
                            </div>
                            <p style="margin: 0px 5px 0px 10px;"><%= exercise.name %></p>
                        </div>
                      </td>
                      <td><%= exercise.cat %></td>
                      <td><%= exercise.calories %></td>
                      <td><%= exercise.set %></td>
                      <td><%= exercise.perset %></td>
                      <td><%= exercise.weight %></td>
                      <td>
                        <div class="options">
                            <a class="edit" onclick="editExercise('<%= exercise.id %>','<%= exercise.name %>','<%= exercise.cat %>','<%= exercise.calories %>','<%= exercise.set %>','<%= exercise.perset %>','<%= exercise.weight %>')"><span class="iconify" data-icon="akar-icons:edit"></span></a>
                            <a class="delete" onclick="deleteExercise('<%= exercise.id %>')"><span class="iconify" data-icon="ant-design:delete-outlined"></span></a>
                            <input type="hidden" name="" id="ckeditordescriptionvalue<%= exercise.id %>" value="<%= exercise.description %>">
                        </div>
                      </td>
                    </tr>
                <% }); %> 
            <% } %> 
            </tbody>
          </table>
          <% if(!searchPage && data.length != 0 && metadata.total_pages > 1) { %> 
            <div class="pages">
                <div class="total_pages">
                    <div class="form-group">
                        <input type="number" class="form-control" id="pageNumber" name="pageNumber" placeholder="Total pages = <%= metadata.total_pages %> ">
                    </div>
                    <button class="btn btn-primary" onclick="goToPage()">Go</button>
                </div>
                <div class="inner_pages">
                    <% if(metadata.page == 1) { %>
                        <a id="prev" class="disabled">Prev</a>
                    <% } else { %>
                        <a id="prev" onclick="location.href='/admin/workout?page=<%= metadata.page - 1 %>'">Prev</a>
                    <% } %>
                    <% if(metadata.total_pages >= 3) { %> 
                        <% if(metadata.page == metadata.total_pages) { %> 
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page - 2 %>'"><%= metadata.page - 2 %></a>
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page - 1 %>'"><%= metadata.page - 1 %></a>
                            <a class="page selected_page" onclick="location.href='/admin/workout?page=<%= metadata.page %>'"><%= metadata.page %></a>
                        <% } else if(metadata.page == (metadata.total_pages - 1)) { %>
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page - 1 %>'"><%= metadata.page - 1 %></a>
                            <a class="page selected_page" onclick="location.href='/admin/workout?page=<%= metadata.page %>'"><%= metadata.page %></a>
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page + 1 %>'"><%= metadata.page + 1 %></a>
                        <% } else { %>
                            <a class="page selected_page" onclick="location.href='/admin/workout?page=<%= metadata.page %>'"><%= metadata.page %></a>
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page + 1 %>'"><%= metadata.page + 1 %></a>
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page + 2 %>'"><%= metadata.page + 2 %></a>
                        <% } %>
                    <% } else if(metadata.total_pages == 2) { %>
                        <% if(metadata.page == metadata.total_pages) { %> 
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page - 1 %>'"><%= metadata.page - 1 %></a>
                            <a class="page selected_page" onclick="location.href='/admin/workout?page=<%= metadata.page %>'"><%= metadata.page %></a>
                        <% } else if(metadata.page == (metadata.total_pages - 1)) { %>
                            <a class="page selected_page" onclick="location.href='/admin/workout?page=<%= metadata.page %>'"><%= metadata.page %></a>
                            <a class="page" onclick="location.href='/admin/workout?page=<%= metadata.page + 1 %>'"><%= metadata.page + 1 %></a>
                        <% } %>
                    <% } else if(metadata.total_pages == 1) { %>
                        <a class="page selected_page" onclick="location.href='/admin/workout?page=<%= metadata.page %>'"><%= metadata.page %></a>
                    <% } %>
                    <% if(metadata.page == metadata.total_pages) { %> 
                        <a id="next" class="disabled">Next</a>
                    <% } else { %>
                        <a id="next" onclick="location.href='/admin/workout?page=<%= metadata.page + 1 %>'">Next</a>
                    <% } %>
                </div>
            </div>
          <% } %> 
    </div>
</div>

