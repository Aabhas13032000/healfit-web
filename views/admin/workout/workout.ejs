                              <option value="3">CARDIO</option>
                              <option value="4">BACK</option>
                              <option value="5">SHOULDERS</option>
                              <option value="6">TRICEPS</option>
                              <option value="7">BICEPS</option>
                              <option value="8">ABS</option>
                              <option value="9">LOW BACK & CORE</option>
                              <option value="10">ABDOMINAL</option>
                              <option value="11">CALVES</option>
                              <option value="12">YOGA</option>
                            </select>
                        </div>
                          <div class="form-group">
                            <label for="calories" style="margin-top: 10px;">Calories</label>
                            <input type="number" step=0.01 id="calories" name="calories" class="form-control" placeholder="Enter amount of calories.." value="0" style="margin: 10px 0px;" required>
                          </div>
                          <div class="form-group">
                            <label for="set">Sets</label>
                            <input type="number" id="set" name="set" class="form-control" placeholder="Enter number of sets.." style="margin: 10px 0px;" value="1" required>
                          </div>
                          <div class="form-group">
                            <label for="perset">Perset</label>
                            <input type="number" id="perset" name="perset" class="form-control" placeholder="Enter number of repetations.." style="margin: 10px 0px;" value="1" required>
                          </div>
                          <div class="form-group">
                            <label for="weight">Weight(if not enter 0)</label>
                            <input type="number" step=0.01 id="weight" name="weight" class="form-control" placeholder="Enter amount of weight.." style="margin: 10px 0px;" value="0" required>
                          </div>
                          <div class="form-group">
                              <label for="exercise_images" style="margin: 10px 0px;">Images</label>
                              <input class="form-control" onchange="uploadImages('add')" style="height: unset;border-radius: 8px;" type="file" multiple id="exercise_images" name="exercise_images" accept="image/*">
                          </div>
                          <div id="preview" class="row preview_images">
                              
                          </div>
                          <div class="button">
                              <button type="submit" id="exercise_verify" class="btn btn-primary d-flex justify-content-center" style="width: 100%;margin-top: 20px;">Create</button>
                          </div>
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>

