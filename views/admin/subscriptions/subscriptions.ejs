<%- include('../../components/header/header.ejs',{cssFile : 'adminPages',page:'Dashboard'}) %> 

<div id="load"></div>

<div class="alert alert-dismissible fade show" role="alert" id="success-alert">
  <p id="alertMessage" style="margin: 0;">Edited successfully</p>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="modal fade" id="addSubscription" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
          <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Subscription</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form onsubmit="addSubscription(event)" id="form" method="post" enctype="multipart/form-data" autocomplete="off">
                  <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                          <label for="users">User</label>
                          <select class="form-control" id="users" style="margin-bottom: 10px;margin-top: 10px;" name="users" aria-label="Users Categories" required>
                            <option value="">Select User</option>
                          </select>
                      </div>
                      <% if(!bookPage) { %> 
                        <div class="form-group">
                          <label for="trainer_program_id" style="margin-top: 10px;">Trainer Programs</label>
                            <select class="form-control" id="trainer_program_id" style="margin: 10px 0px;" name="trainer_program_id" aria-label="Time" required>
                              <option value="">Select trainer program</option>
                              <% trainer_programs.forEach((trainer_program,index) => { %>
                                <option value="<%= trainer_program.id %>_<%= trainer_program.program_id %>"><%= trainer_program.trainerName %>, <%= trainer_program.programName %>, <%= trainer_program.session_type %>, <%= trainer_program.day_id %>, <%= trainer_program.session_id %>, <%= trainer_program.time_id %></option>
                              <% }); %> 
                            </select>
                        </div>
                      <% } else { %>
                        <div class="form-group">
                          <label for="item_id" style="margin-top: 10px;">Books</label>
                            <select class="form-control" id="item_id" style="margin: 10px 0px;" name="book" aria-label="Time" required>
                              <option value="">Select book</option>
                              <% books.forEach((book,index) => { %>
                                <option value="<%= book.id %>"><%= book.title %></option>
                              <% }); %> 
                            </select>
                        </div>
                      <% } %> 
                      <div class="form-group">
                          <label for="end_date" style="margin-top: 10px;">End Date</label>
                          <input type="date" id="end_date" name="end_date" class="form-control" placeholder="Select end date" style="margin-top: 10px;" required>
                      </div>
                          <div class="button">
                              <button type="submit" id="subscriptions_verify" class="btn btn-primary d-flex justify-content-center" style="width: 100%;margin-top: 20px;">Add</button>
                          </div>
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>

<div class="modal fade" id="editSubscription" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
          <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Subscriptions</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
