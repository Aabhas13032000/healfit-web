                          <a id="prev" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page - 1 %>'">Prev</a>
                        <% } else { %> 
                          <a id="prev" onclick="location.href='/admin/subscriptions?page=<%= metadata.page - 1 %>'">Prev</a>
