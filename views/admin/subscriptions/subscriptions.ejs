                    <% } else if(metadata.total_pages == 2) { %>
                        <% if(metadata.page == metadata.total_pages) { %> 
                          <% if(bookPage) { %> 
                            <a class="page" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page - 1 %>'"><%= metadata.page - 1 %></a>
                            <a class="page selected_page" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page %>'"><%= metadata.page %></a>
                          <% } else { %> 
                            <a class="page" onclick="location.href='/admin/subscriptions?page=<%= metadata.page - 1 %>'"><%= metadata.page - 1 %></a>
                            <a class="page selected_page" onclick="location.href='/admin/subscriptions?page=<%= metadata.page %>'"><%= metadata.page %></a>
                          <% } %>
                        <% } else if(metadata.page == (metadata.total_pages - 1)) { %>
                          <% if(bookPage) { %> 
                            <a class="page selected_page" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page %>'"><%= metadata.page %></a>
                            <a class="page" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page + 1 %>'"><%= metadata.page + 1 %></a>
                          <% } else { %> 
                            <a class="page selected_page" onclick="location.href='/admin/subscriptions?page=<%= metadata.page %>'"><%= metadata.page %></a>
                            <a class="page" onclick="location.href='/admin/subscriptions?page=<%= metadata.page + 1 %>'"><%= metadata.page + 1 %></a>
                          <% } %>
                        <% } %>
                    <% } else if(metadata.total_pages == 1) { %>
                        <% if(bookPage) { %> 
                          <a class="page selected_page" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page %>'"><%= metadata.page %></a>
                        <% } else { %> 
                          <a class="page selected_page" onclick="location.href='/admin/subscriptions?page=<%= metadata.page %>'"><%= metadata.page %></a>
                        <% } %> 
                    <% } %>
                    <% if(metadata.page == metadata.total_pages) { %> 
                        <a id="next" class="disabled">Next</a>
                    <% } else { %>
                        <% if(bookPage) { %> 
                          <a id="next" onclick="location.href='/admin/subscriptions/book?page=<%= metadata.page + 1 %>'">Next</a>
                        <% } else { %> 
                          <a id="next" onclick="location.href='/admin/subscriptions?page=<%= metadata.page + 1 %>'">Next</a>
                        <% } %> 
                    <% } %>
                </div>
            </div>
          <% } %> 
    </div>
</div>

